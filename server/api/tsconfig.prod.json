{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2022",
    "verbatimModuleSyntax": false
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/tests/**/*.ts"
  ]
}